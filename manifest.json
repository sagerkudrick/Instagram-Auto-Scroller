{
  "manifest_version": 3,
  "name": "Instagram Auto-Scroller",
  "version": "1.0",
  "description": "Auto-scrolling and comment opening for Instagram Reels.",
  "icons": {
      "16": "imgs/icon16.png",
      "19": "imgs/icon19.png",
      "32": "imgs/icon32.png",
      "38": "imgs/icon38.png",
      "48": "imgs/icon48.png",
      "128": "imgs/icon128.png"
    },
  "permissions": [
    "storage", 
    "activeTab", 
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/reels/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "imgs/icon128.png",
    "default_popup": "popup/popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
